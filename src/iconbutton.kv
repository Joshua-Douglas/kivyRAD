#:set x_pad 10
#:set y_pad 0
#:set height 64
#:set width 64

<IconButton>:
		id: butt			
		# These should be able to be determined from the svg instructions
		# But the instructions are applied as soon as they are loaded...
        # At this point I'll need another library to determine the dimensions
        # Or I'll have to pop off the instruction as soon as it is added
		svg_height: 64
		svg_width: 64
		canvas:
			# Each of these coordinates are relativate to the widgets
			# The coordinates are not relative to the widget when the same
			# instructions are written in python. I need to figure out why
			# Because kvlang is a bit restrictive for the conditional
			# logic we want here
            Translate:
				x: self.x
				y: self.y
			Scale:
				x: (butt.width - 2*x_pad) / self.svg_width
				y: (butt.height - 2*y_pad) / self.svg_height
			Svg: 
				# using self.source doesn't work here...
				# another restriction of kvlang it seems
				source: "C:\\Users\\joshu\\source\\repos\\kivydesigner\\src\\pumk.svg"
			Scale:
				x: self.svg_width / (butt.width-2*x_pad)
				y: self.svg_height / (butt.height-2*y_pad) 
			Translate:
				x: -self.x
				y: -self.y
